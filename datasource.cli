# $WILDFLY_HOME/bin/jboss-cli.sh --file=/path/to/this/file.
embed-server
batch

deploy /opt/wildfly/postgresql-POSTGRESQL-JDBC-DRIVER-VERSION.jar

data-source add --name=PostgresDS --driver-name=postgresql-POSTGRESQL-JDBC-DRIVER-VERSION.jar --jndi-name=java:/datasources/PostgresDS --connection-url=jdbc:postgresql://${POSTGRES_IPADDRESS}:${POSTGRES_PORT}/${POSTGRES_DATABASE} --user-name=${POSTGRES_USERNAME} --password=${POSTGRES_PASSWORD}

run-batch
